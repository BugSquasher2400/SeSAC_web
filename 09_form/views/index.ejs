<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>form 전송</title>
  </head>
  <body>
    <h2>GET 요청</h2>
    <form action="/getForm" method="get">
      <label> id: <input type="text" name="id" /> </label>
      <br />
      <label> email: <input type="email" name="email" /> </label>
      <br />
      <label> pw: <input type="password" name="pw" /> </label>

      <button type="button">제출?</button>
      <button type="submit">제출</button>
    </form>

    <h2>POST 요청</h2>
    <form action="/postForm" method="post">
      <label for="id"></label>
      <input
        id="id"
        type="text"
        name="id"
        placeholder="아이디작성해주세요"
        required
        title="아이디는 대소문자, 숫자, 한글로 구성된 네글자 이상의 문자여야합니다"
        pattern="^([a-zA-Z0-9가-힣]){4,}$"
      />
      <br />
      <label for="pw"></label>
      <input
        id="pw"
        type="password"
        name="pw"
        placeholder="비밀번호"
        required
        title="비밀번호는 영어소문자, 숫자로 구성된 8~12 글자의 문자여야합니다"
        pattern="^([a-z0-9]){8,12}$"
      />
      <br />
      <label>
        <input type="checkbox" name="agree" value="narjetubg" />
        마케팅동의
      </label>
      <label>
        <input type="checkbox" name="agree" value="privete" />
        개인정보 수집 동의
      </label>
      <label>
        <input type="checkbox" name="agree" value="use" />
        이용약관 동의
      </label>

      <br />
      <input type="submit" value="제출" />
    </form>

    <h2>유효성 검사</h2>
    <form
      action="/js-form-check"
      method="post"
      name="validationForm"
      target="_blank"
      onsubmit="return checkForm(this)"
    >
      <input
        type="text"
        name="id2"
        title="최소 한 글자"
        minlength="1"
        placeholder="최소 한 글자를 작성해주세요"
        id="input"
      />
      <br />
      <span>우편물 수령 장소</span>
      <label> <input type="checkbox" name="mail" value="자택" />자택 </label>
      <label> <input type="checkbox" name="mail" value="회사" />회사 </label>
      <button>제출</button>

      <hr />

      <a href="/practice1">GET 방식</a><br />
      <a href="/practice2">POST 방식</a>
    </form>
    <script>
      function checkForm(form) {
        // this - 자신 폼 태그 그 자체
        const form2 = document.forms["validationForm"];
        console.log(form);
        console.log(form.id2); //선택된 폼.name
        console.log(form.input); //선택된 폼.id
        if (form.id2.value.trim() === "") {
          alert("아이디를 입력해주세요");
          // false 를 해줘야 submit이 안됨
          return false;
        }

        // 체크박스 하나라도 선택해야 제출되도록
        console.log(form.mail);
        if (form.mail[0].checked === false && form.mail[1].checked === false) {
          alert("우편물 수령장소를 선택해주세요");
          return false; //이벤트 막기
        }
      }
    </script>
  </body>
</html>
